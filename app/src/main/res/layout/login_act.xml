<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <ImageView android:layout_width="200dp"
               android:layout_height="200dp"
               android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
               android:paddingBottom="10dp"/>


    <Switch
            android:id="@+id/tSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Punya Akun ?"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

        <EditText
                android:id="@+id/et_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nama"
                android:padding="11dp"
                android:background="@drawable/sahpe_emailpass"
                android:layout_margin="8dp"/>


    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textEmailAddress"
              android:layout_margin="8dp"
              android:hint="masukan email"
              android:padding="11dp"
              android:background="@drawable/sahpe_emailpass"
              android:id="@+id/et_email"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textPassword"
              android:layout_margin="8dp"
              android:layout_marginBottom="25dp"
              android:hint="Masukan Password"
              android:padding="11dp"
              android:background="@drawable/sahpe_emailpass"
              android:id="@+id/et_password"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


        <Button android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="LOGIN"
                android:padding="10dp"
                android:background="@drawable/sahpe_log"
                android:id="@+id/btn_login"/>
        <TextView android:layout_width="29dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:text="OR"
                  android:textStyle="bold"/>

        <com.google.android.gms.common.SignInButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_in_button"
                android:layout_marginLeft="20dp"/>

    </LinearLayout>
    </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:text="Not have account"
    />
    <Button android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textColor="@color/putih"
            android:background="@drawable/sahpe_emailpasss1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15sp"
            android:id="@+id/btn_regis"/>

    </LinearLayout>



</LinearLayout>